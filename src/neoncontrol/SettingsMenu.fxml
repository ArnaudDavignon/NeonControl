<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="neoncontrol.SettingsMenuController">
   <children>
      <ImageView fx:id="bg" fitHeight="520.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Graphics/Settings%20Menu%20No%20Buttons.png" />
         </image>
      </ImageView>
      <ImageView fx:id="playBT" fitHeight="83.0" fitWidth="262.0" layoutX="81.0" layoutY="387.0" onMouseClicked="#setOnPlayClicked" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Graphics/Green%20Play%20Button.png" />
         </image>
      </ImageView>
      <ImageView fx:id="exitBT" accessibleRole="BUTTON" fitHeight="150.0" fitWidth="200.0" layoutX="416.0" layoutY="383.0" onMouseClicked="#setOnExitClicked" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Graphics/Exit%20Button.png" />
         </image>
      </ImageView>
      <Slider fx:id="massSlider" blockIncrement="0.1" layoutX="92.0" layoutY="310.0" majorTickUnit="0.1" max="1.0" min="0.1" minorTickCount="0" prefHeight="35.0" prefWidth="239.0" showTickMarks="true" snapToTicks="true" value="0.3" />
      <CheckBox fx:id="BGMCheckBox" layoutX="196.0" layoutY="254.0" mnemonicParsing="false" onAction="#setOnToggleBGM" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="SFXCheckBox" layoutX="196.0" layoutY="197.0" mnemonicParsing="false" onAction="#setOnToggleSFX" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </CheckBox>
      <Slider fx:id="volumeSlider" blockIncrement="0.1" layoutX="223.0" layoutY="195.0" majorTickUnit="0.1" max="2.0" minorTickCount="0" onMouseReleased="#setOnVolumeChange" prefHeight="37.0" prefWidth="239.0" value="1.0" />
      <ImageView fx:id="SoundEffectLbl" fitHeight="50.0" fitWidth="584.0" layoutX="142.0" layoutY="190.0" onMouseClicked="#setOnPlayClicked" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Graphics/Sound%20Effects.png" />
         </image>
      </ImageView>
      <ImageView fx:id="MusicLbl" fitHeight="50.0" fitWidth="584.0" layoutX="189.0" layoutY="247.0" onMouseClicked="#setOnPlayClicked" onMouseEntered="#setOnHoverPlayBT" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Graphics/Background%20Music.png" />
         </image>
      </ImageView>
      <ImageView fx:id="SpeedLbl" fitHeight="47.0" fitWidth="435.0" layoutX="251.0" layoutY="300.0" onMouseClicked="#setOnPlayClicked" onMouseEntered="#setOnHoverPlayBT" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Graphics/Speed%20of%20Play.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
